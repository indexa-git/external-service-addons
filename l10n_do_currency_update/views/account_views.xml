<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="invoice_form_inherited" model="ir.ui.view">
        <field name="name">invoice.form.inherited</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="show_rate" invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="%(update_rate_wizard_action)d"
                            type="action"
                            class="oe_stat_button"
                            groups="base.group_multi_currency"
                            icon="fa-money"
                            attrs="{'invisible': [('show_rate', '!=', True)]}">
                        <field name="rate" widget="statinfo" string="Tasa"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

    <record id="invoice_supplier_form_inherited" model="ir.ui.view">
        <field name="name">supplier.account.invoice.form.inherited</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="show_rate" invisible="1"/>
            </xpath>
            <xpath expr="//sheet/div[1]" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="%(update_rate_wizard_action)d"
                            type="action"
                            class="oe_stat_button"
                            groups="base.group_multi_currency"
                            icon="fa-money"
                            attrs="{'invisible': [('show_rate', '!=', True)]}">
                        <field name="rate" widget="statinfo" string="Tasa"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
